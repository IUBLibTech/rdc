<% if f.object.multiple? key %>
  <%= f.input key, as: :multi_value, input_html: { class: 'form-control' }, required: f.object.required?(key), hint: auto_link(I18n.t("simple_form.hints.data_set.#{key}"), html: { target: '_blank' }) %>
<% else %>
  <%= f.input key, required: f.object.required?(key), hint: auto_link(I18n.t("simple_form.hints.data_set.#{key}"), html: { target: '_blank' }) %>
<% end %>

<% if f.object.multiple? key %>
  <%= f.input :description, as: :multi_value, input_html: { rows: '14', type: 'textarea'}, required: f.object.required?(key), hint: hint_with_links(key) %>
<% else %>
  <%= f.input :description, as: :text, input_html: { rows: '14' }, required: f.object.required?(key), hint: hint_with_links(key) %>
<% end %>

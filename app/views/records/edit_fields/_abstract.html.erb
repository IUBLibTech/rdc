<% if f.object.multiple? key %>
  <%= f.input :abstract, as: :multi_value, input_html: { rows: '14', type: 'textarea'}, required: f.object.required?(key), hint: auto_link(I18n.t("simple_form.hints.data_set.#{key}"), html: { target: '_blank' }) %>
<% else %>
  <%= f.input :abstract, as: :text, input_html: { rows: '14' }, required: f.object.required?(key), hint: auto_link(I18n.t("simple_form.hints.data_set.#{key}"), html: { target: '_blank' }) %>
<% end %>
